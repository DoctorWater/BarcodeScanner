<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAndroid.App.MainPage">


    <VerticalStackLayout
        Padding="30,0"
        Spacing="20"
        VerticalOptions="FillAndExpand">

        <Button
            x:Name="ScanBtn"
            Text="Сканировать"
            Clicked="OnScanClicked"
            HorizontalOptions="Center"
            IsEnabled="{Binding IsAuthorized}" />

        <Button
            x:Name="SettingsBtn"
            Text="Настройки"
            Clicked="OnSettingsButtonClicked"
            HorizontalOptions="Center"
            IsEnabled="{Binding IsAuthorized}" />

        <Button
            Text="Авторизация"
            Clicked="OnAuthorizationButtonClicked"
            HorizontalOptions="Center" />
        
        <Button
            Text="Тест"
            Clicked="OnTestClicked"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
